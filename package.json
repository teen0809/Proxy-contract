{
  "name": "prb-proxy",
  "description": "Proxy contract to compose Ethereum transactions on behalf of the owner",
  "version": "1.0.0",
  "author": {
    "name": "Paul Razvan Berg",
    "url": "https://paulrberg.com"
  },
  "bugs": {
    "url": "https://github.com/paulrberg/prb-proxy/issues"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.4.1",
    "@ethersproject/address": "^5.4.0",
    "@ethersproject/keccak256": "^5.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@ethersproject/abstract-provider": "^5.4.1",
    "@ethersproject/abstract-signer": "^5.4.1",
    "@ethersproject/bignumber": "^5.4.2",
    "@ethersproject/bytes": "^5.4.0",
    "@ethersproject/constants": "^5.4.0",
    "@ethersproject/contracts": "^5.4.1",
    "@ethersproject/providers": "^5.4.5",
    "@ethersproject/units": "^5.4.0",
    "@ethersproject/wallet": "^5.4.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.6",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^7.1.2",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/mocha-each": "^2.0.0",
    "@types/node": "^16.10.1",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "chai": "^4.3.4",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.7",
    "from-exponential": "^1.1.1",
    "hardhat": "^2.6.4",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-packager": "^1.2.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "mocha": "^9.1.2",
    "mocha-each": "^2.0.1",
    "nyc": "^15.1.0",
    "pinst": "^2.1.6",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "shelljs": "^0.8.4",
    "shx": "^0.3.3",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.2.1",
    "typechain": "^5.1.2",
    "typescript": "^4.4.3"
  },
  "files": [
    "/artifacts/**/*.json",
    "/contracts",
    "/dist/**/*.d.ts",
    "/dist/**/*.d.ts.map",
    "/dist/**/*.js",
    "/dist/**/*.js.map",
    "/typechain/**/*.d.ts",
    "/typechain/**/*.js",
    "CHANGELOG.md"
  ],
  "homepage": "https://github.com/paulrberg/prb-proxy#readme",
  "keywords": [
    "blockchain",
    "delegatecall",
    "ethereum",
    "prb-proxy",
    "proxy",
    "smart-contracts",
    "solidity"
  ],
  "license": "Unlicense",
  "main": "./dist/index.js",
  "peerDependencies": {
    "@ethersproject/abi": "^5.4.1",
    "@ethersproject/address": "^5.4.0",
    "@ethersproject/keccak256": "^5.4.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paulrberg/prb-proxy"
  },
  "scripts": {
    "build": "yarn build:contracts && yarn build:src",
    "build:contracts": "cross-env TS_NODE_TRANSPILE_ONLY=true yarn hardhat prepare-package && tsc --project ./tsconfig.contracts.json",
    "build:src": "tsc --project ./tsconfig.src.json",
    "clean": "shx rm -rf ./.nyc_output ./artifacts ./cache ./coverage-contracts ./coverage-src ./dist ./typechain ./coverage.json ./tsconfig.prod.tsbuildinfo",
    "clean:node_modules": "shx rm -rf ./node_modules",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "coverage": "yarn coverage:contracts && yarn coverage:src",
    "coverage:contracts": "cross-env CODE_COVERAGE=true hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "coverage:src": "yarn nyc --nycrc-path ./.nycrc.yaml mocha",
    "lint": "yarn lint:contracts && yarn lint:ts && yarn prettier:check",
    "lint:contracts": "solhint --config ./.solhint.json --ignore-path ./.solhintignore --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepack": "yarn build",
    "prepublishOnly": "pinst --disable",
    "prettier": "prettier --config ./.prettierrc.yaml --ignore-path ./.prettierignore --write \"**/*.{js,json,md,sol,ts,yaml,yml\"",
    "prettier:check": "prettier --check --config ./.prettierrc.yaml --ignore-path ./.prettierignore \"**/*.{js,json,md,sol,ts,yaml,yml}\"",
    "test": "hardhat test",
    "test:contracts": "hardhat test ./test/contracts --network hardhat",
    "test:src": "yarn mocha --config ./.mocharc.yaml",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain"
  }
}
